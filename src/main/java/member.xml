<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberns">
	<!-- resultType은 조회할때만 사용 -->	
	<select id="select" parameterType="string" resultType="member">	<!--configuration.xml 에서 member를 정의했음 <typeAlias alias="member" type="ch17.model.Member" /> -->
		select * from member2 where id=#{id}
	</select>
	<insert id="insert" parameterType="member">
		insert into member2 values(#{id}, #{password}, #{name}, #{address}, #{tel}, sysdate, 'n')
	</insert>
	<update id="update" parameterType="member">
		update member2 set password=#{password}, name=#{name}, address=#{address}, tel=#{tel} where id=#{id}
	</update>
	<update id="delete" parameterType="string">
		update member2 set del='y' where id=#{id}
	</update>
	<select id="list" parameterType="map" resultType="member">
		select * from (select rowNum rn, a.* from (select * from member2 order by reg_date) a)
			where rn between #{startRow} and #{endRow}
	</select>
	<select id="getTotal" resultType="integer">
		select count(*) from member2
	</select>
</mapper>
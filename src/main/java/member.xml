<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberns">

	<!-- 회원 아이디 조회 -->
	<select id="select" parameterType="string" resultType="member">
		select * from member2 where id=#{id}
	</select>	

	<!-- 닉네임 중복확인 -->
	<select id="confirmNick" parameterType="string" resultType="member">
		select * from member where nickname=#{nickname}
	</select>

	<!-- 회원 가입 -->
	<insert id="insert" parameterType="member">
<!-- 		<selectKey keyProperty="mno" order="BEFORE" resultType="integer"> 
 			select nvl(max(mno), 0) + 1 mno from member 
 		</selectKey> -->
		insert into member values(#{memberno},#{id},#{password},#{nickname},
			#{netflix},#{disney},#{coupang},#{tving},'n')
	</insert>
	
	<!-- DB에 등록된 총 회원 수 -->
	<select id="getTotal" resultType="integer">
		select count(*) from member
	</select>
	
	<!-- 영화 리스트 뽑아오기 -->
	<select id="list" parameterType="map" resultType="member">
		select * from (select rowNum rn, a.* from (select * from member order by memberno) a)
			where rn between #{startRow} and #{endRow}
	</select>
</mapper>